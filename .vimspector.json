{
	"configurations": {
		"Debug": {
			"default": true,
			"adapter": "vscode-cpptools",
			"filetypes": [ "cpp" ],
			"configuration": {
				"request": "launch",
				"program": "${workspaceRoot}/build/ImgView",
				"cwd": "${workspaceRoot}/test",
				"externalConsole": true,
				"stopAtEntry": true,
				"MIMode": "gdb",
				"setupCommands": [
					{
						"description": "Enable pretty-printing for gdb",
						"text": "-enable-pretty-printing",
						"ignoreFailures": true
					}
				]
			}
		}
	}
}
